{
  "name": "ap_desktop",
  "description": "Graphical user interface for QUT's AnalysisPrograms.exe (AP.exe).",
  "version": "1.3.0",
  "license": "MIT",
  "author": {
    "name": "Charles Alleman",
    "email": "alleman@qut.edu.au",
    "url": "https://github.com/Allcharles"
  },
  "private": true,
  "main": "src/index.js",
  "scripts": {
    "ap_download": "pwsh -ExecutionPolicy ByPass -File ./script_ap.ps1",
    "babel:async": "npx babel ./src/js/ --out-dir ./src/js-compiled/ -w",
    "babel": "npx babel ./src/js/ --out-dir ./src/js-compiled/ && npx babel ./tests/test/ --out-dir ./tests/test-compiled/",
    "build": "npm run clean && npm run exe64 && npm run deb64",
    "clean": "rimraf dist",
    "deb64": "electron-installer-debian --src dist/ap_desktop-linux-x64/ --arch amd64 --config config.json",
    "dependencies": "chmod +x ./linux_dependencies.sh && ./linux_dependencies.sh",
    "exe64": "electron-packager . ap_desktop --platform linux --arch x64 --out dist/",
    "install": "npm run ap_download && npm run babel",
    "start": "concurrently --kill-others \"npm run babel:async\" \"electron-forge start\"",
    "test": "npm run babel && mocha tests/test-compiled/tests.js"
  },
  "dependencies": {
    "csv-parser": "^2.1.0",
    "json2csv": "^4.3.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.3",
    "@babel/core": "^7.4.3",
    "@babel/preset-env": "^7.4.3",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "concurrently": "^4.1.0",
    "electron": "^4.1.4",
    "electron-compile": "^6.4.4",
    "electron-forge": "^5.2.4",
    "electron-installer-debian": "^1.1.1",
    "electron-packager": "^13.1.1",
    "electron-prebuilt-compile": "4.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "git": "^0.1.5",
    "mocha": "^6.1.4",
    "pwsh": "^0.2.0",
    "rimraf": "^2.6.3",
    "spectron": "^5.0.0"
  }
}
